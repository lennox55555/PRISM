# application settings
DEBUG=true

# cors settings - comma separated list of allowed origins
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# openai api key for speech-to-text (whisper) and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# anthropic claude api key for svg generation
CLAUDE_KEY=your_anthropic_api_key_here

# llm model to use for svg generation
# claude options: claude-opus-4-6, claude-sonnet-4-6, claude-sonnet-4-5-20250514
# openai options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
LLM_MODEL=claude-opus-4-6

# live speech summary settings (used for the left slide notes panel)
SUMMARY_LLM_PROVIDER=claude
SUMMARY_LLM_MODEL=claude-sonnet-4-6

# speech-to-text provider
# options: openai_whisper, mock
STT_PROVIDER=openai_whisper

# audio settings
SAMPLE_RATE=16000
CHUNK_SIZE=1024
